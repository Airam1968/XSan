*------------------ Funcao de Log de Acesso ----------------
FUNCTION F_LACESSO
   **** Funcao de script de acesso a m¢dulos
   PARAMETERS fUSUARIO,fMODULO,fACAO
   SELE 9
   USE LOG_USU 
   GOTO TOP
   APPEND BLANK
   IF F_BLOQR()
      REPLACE DATA    WITH DATE(),;
	      HORA    WITH TIME(),;
	      USUARIO WITH fUSUARIO
      REPLACE MODULO  WITH fMODULO,;
	      ACAO    WITH fACAO
      UNLOCK
   ENDIF
   SELE 9
   USE
RETURN .T.
