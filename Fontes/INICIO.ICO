*---------------- Funcao de Controle de Acesso -------------
FUNCTION F_ACESSO
   **** Funcao de controle de acesso a m¢dulos
   PARAMETERS fTIPO
   eRETORNO = .F.
   SELE 9
   USE CAD_USU INDEX CAD_USU
   GOTO TOP
   SEEK sisUSUARIO
   IF &fTIPO
      eRETORNO = .T.
   ENDIF
   SELE 9
   USE
RETURN eRETORNO
*-------------------------  fim  ---------------------------
FUNCTION F_BLOQR
   **** Funcao de Bloqueio a Registros
   SAVE SCREEN TO TELA999
   eRETORNO = .F.
   DO WHILE .T.
      DO PLQUA WITH '01'
      DO PMENSAG WITH 'Aguarde, Registro em Uso Tentando ACESSO.'
      IF RLOCK()
	 eRETORNO = .T.
	 DO PLQUA WITH '01'
	 EXIT
      ELSE
	 LOOP
      ENDIF
   ENDDO
   RESTORE SCREEN FROM TELA999
RETURN eRETORNO
*-------------------------  fim  ---------------------------
FUNCTION F_BLOQA
   **** Funcao de Bloqueio a Arquivos
   SAVE SCREEN TO TELA999
   eRETORNO = .F.
   DO WHILE .T.
      DO PLQUA WITH '01'
      DO PMENSAG WITH 'Aguarde, Arquivo em Uso, Tentando ACESSO'
      IF FLOCK()
	 eRETORNO = .T.
	 DO PLQUA WITH '01'
	 EXIT
      ELSE
	 LOOP
      ENDIF
   ENDDO
   RESTORE SCREEN FROM TELA999
RETURN eRETORNO
